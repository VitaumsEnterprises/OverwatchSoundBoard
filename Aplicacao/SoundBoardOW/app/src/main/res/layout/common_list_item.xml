<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">
    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="2dp"
        android:id="@+id/list_item_thumbnail"
        android:src="@drawable/ana_cute"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    </ImageView>
    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Texto"
        android:textSize="18dp"
        android:id="@+id/list_item_text"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/list_item_thumbnail"
        android:layout_toEndOf="@+id/list_item_thumbnail" />

    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/list_item_btn"
        android:layout_alignTop="@+id/list_item_text"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="28dp"
        android:src="@drawable/ic_share_black_24dp" />

</RelativeLayout>