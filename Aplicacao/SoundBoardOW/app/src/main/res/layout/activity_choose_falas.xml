<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/ScrollView01"
android:layout_width="fill_parent"
android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageButton
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:id="@+id/ibOffensive"
        android:layout_marginTop="38dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/offense_heroes_iconed"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:id="@+id/ibDefensive"
        android:layout_marginTop="290dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/defense_heroes_iconed"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:id="@+id/ibTank"
        android:layout_marginTop="542dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/tank_heroes_iconed"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:id="@+id/ibSupport"
        android:layout_marginTop="794dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/support_heroes_iconed"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
</ScrollView>